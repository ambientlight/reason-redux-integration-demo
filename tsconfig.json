{
  "compilerOptions": {
    "outDir": "dist",
    "sourceRoot": "src",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es2015", "es2017", "dom"],
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "reason": ["lib/js/src"],
      "src": ["src"]
    }
  },
  "include": ["./src/**/*"]
}